<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="colorButtonNormal">@color/colorButtonBackground</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="DefaultActivityStyle">
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="LauncherButton" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:layout_margin">@dimen/launcher_button_margin</item>
        <item name="android:padding">@dimen/launcher_button_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="DefaultFontTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="ToolbarStyle">
        <item name="titleTextColor">?colorAccent</item>
        <item name="titleTextAppearance">@style/DefaultFontTextAppearance</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="EmptyActivityLabel" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="SimpleListItemIcon">
        <item name="android:layout_width">@dimen/simple_list_item_image_size</item>
        <item name="android:layout_height">@dimen/simple_list_item_image_size</item>
        <item name="android:tint">?colorAccent</item>
        <item name="android:layout_marginTop">@dimen/simple_list_item_image_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/simple_list_item_image_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/simple_list_item_image_margin_left</item>
        <item name="android:layout_marginRight">@dimen/simple_list_item_image_margin_right</item>
    </style>

    <style name="SimpleListItemTitleTextAppearance" parent="DefaultFontTextAppearance">
        <item name="android:textSize">@dimen/simple_list_item_title_text_size</item>
    </style>

    <style name="SimpleListItemSubtitleTextAppearance" parent="DefaultFontTextAppearance">
        <item name="android:textSize">@dimen/simple_list_item_subtitle_text_size</item>
    </style>

</resources>
